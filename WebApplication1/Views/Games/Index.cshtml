@model IEnumerable<GameLib.Models.Game>

@{
    ViewData["Title"] = "Index";
}

<h1>Список ігор</h1>

<p>
    <a asp-action="Create">Додати нову гру</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Назва
            </th>
            <th>
                В наявності
            </th>
            <th>
                Жанр
            </th>
            <th>
                Користувач
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Available)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Fullname)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GameId">Редагувати</a> |
                    <a asp-action="Details" asp-route-id="@item.GameId">Деталі</a> |
                    <a asp-action="Delete" asp-route-id="@item.GameId">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
